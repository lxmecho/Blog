---
import BaseLayout from '../layouts/BaseLayout.astro';
import { siteConfig } from '../config/site';
import '../assets/blog-backgrounds.css';

// 设置默认背景图片
const defaultBgImage = '/assets/images/8.jpg';
---

<BaseLayout title="关于">
  <!-- 添加全屏背景图 -->
  <div class="blog-background" style={`background-image: url(${defaultBgImage})`}></div>
  
  <div class="container mx-auto px-4 py-12 relative z-10">
    <div class="max-w-2xl mx-auto bg-card-light dark:bg-card-dark rounded-lg shadow-card overflow-hidden">
      <div class="p-6 md:p-8">
        <h1 class="text-3xl font-bold mb-6 border-l-4 border-primary-500 pl-4">
          关于我
        </h1>
        
        <div class="flex flex-col items-center mb-8">
          <img 
            src={siteConfig.author.avatar} 
            alt={siteConfig.author.name}
            class="w-32 h-32 object-cover rounded-full mb-4"
          />
          <h2 class="text-xl font-bold">{siteConfig.author.name}</h2>
        </div>
        
        <div class="prose dark:prose-dark max-w-none text-center py-10">
          <p class="text-lg text-gray-600 dark:text-gray-400 italic">
            这个人什么也没留下~~~
          </p>
        </div>
      </div>
    </div>
  </div>
</BaseLayout> 