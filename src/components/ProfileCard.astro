---
import { siteConfig } from '../config/site';
---

<div class="bg-card-light dark:bg-card-dark rounded-lg shadow-card overflow-hidden">
  <div class="p-6 text-center">
    <!-- 头像 -->
    <div class="relative mx-auto w-32 h-32 mb-4">
      <img 
        src={siteConfig.author.avatar} 
        alt={siteConfig.author.name}
        class="w-full h-full object-cover rounded-full border-4 border-white dark:border-gray-800 shadow-md"
        loading="lazy"
      />
    </div>
    
    <!-- 作者名称 -->
    <h2 class="text-xl font-bold mb-2">{siteConfig.author.name}</h2>
    
    <!-- 作者简介 -->
    <p class="text-gray-600 dark:text-gray-400 text-sm mb-4">{siteConfig.author.bio}</p>
    
    <!-- 社交媒体链接 -->
    <div class="flex justify-center space-x-3">
      {siteConfig.socialLinks.map((link) => (
        <a 
          href={link.href}
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-500 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400 transition-colors"
          title={link.platform}
        >
          <span class="sr-only">{link.platform}</span>
          
          {link.icon === 'github' && (
